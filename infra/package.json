{
  "name": "infra",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "CDK infrastructure (create/list/destroy with confirmation)",
  "scripts": {
    "cdk": "cdk",
    "create": "node create.js",
    "destroy": "node destroy.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "deploy": "node create.js",
    "deploy:dev": "node scripts/deploy-with-env.js dev",
    "deploy:prod": "node scripts/deploy-with-env.js prod",
    "destroy:dev": "node scripts/destroy-with-env.js dev",
    "destroy:prod": "node scripts/destroy-with-env.js prod",
    "validate:dev": "node scripts/load-env.js dev",
    "validate:prod": "node scripts/load-env.js prod"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.170.0",
    "constructs": "^10.4.2"
  },
  "devDependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.990.0",
    "@aws-sdk/client-dynamodb": "^3.990.0",
    "@aws-sdk/client-secrets-manager": "^3.990.0",
    "@aws-sdk/client-ses": "^3.990.0",
    "@aws-sdk/lib-dynamodb": "^3.990.0",
    "@types/node": "^20.11.0",
    "aws-sdk-client-mock": "^4.1.0",
    "jest": "^30.2.0"
  },
  "engines": {
    "node": ">=18"
  }
}
